<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<div>
	<%= link_to 'Add New Book', new_book_path, class: 'btn btn-primary pull-right' %>
</div>

<div class="clearfix"></div>


<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Book name</th>
      <th>ISBN</th>
      <th>Publisher</th>
      <th>Price</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.book_name, book %></td>
        <td><%= book.isbn %></td>
        <td><%= book.publisher %></td>
        <td><%= book.price %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


